<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:background="@color/aidialog_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.88"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.88" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                
                
                
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/buttonCat"
                    android:layout_width="65dp"
                    android:layout_height="68dp"
                    android:text="@string/SViewAll" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />
                
                <ToggleButton
                    android:id="@+id/toggleButtonGrabar"
                    android:layout_width="69dp"
                    android:layout_height="59dp"
                    android:text="Grabar"
                    android:textOff="Rec"
                    android:textOn="Stop"
                    android:checked="false" />
            </LinearLayout>
                <org.opencv.javacv.facerecognition.Tutorial3View
                    android:id="@+id/tutorial3_activity_java_surface_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.88"
                    opencv:camera_id="front"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>