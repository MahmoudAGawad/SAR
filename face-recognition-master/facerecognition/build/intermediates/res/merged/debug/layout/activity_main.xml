            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/text"

            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/result"


            />

    </LinearLayout>


</RelativeLayout>
